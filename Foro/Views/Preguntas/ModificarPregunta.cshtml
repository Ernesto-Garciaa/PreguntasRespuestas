@model PreguntaModificarModel

<h2>Modificar Pregunta</h2>

<form asp-action="Modificar">
    <input type="hidden" asp-for="IdPregunta" />
    <div class="form-group">
        <label asp-for="IdUsuario" class="control-label"></label>
        <input asp-for="IdUsuario" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Titulo" class="control-label"></label>
        <input asp-for="Titulo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Contenido" class="control-label"></label>
        <textarea asp-for="Contenido" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Fecha" class="control-label"></label>
        <input asp-for="Fecha" class="form-control" />
    </div>
</form>